<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--上-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/it2_home_img1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:src="@drawable/icon_nav_search" />

        <TextView
            android:id="@+id/it2_home_text1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_toRightOf="@id/it2_home_img1"
            android:singleLine="true"
            android:text="北京润土传媒摄像"
            android:textSize="@dimen/home_it1_head1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/it2_home_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/it2_home_text1"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/it2_home_img1"
            android:text="婚纱摄影"
            android:textSize="@dimen/home_it1_head2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="12dp"
            android:src="@drawable/icom_show_guanzhu" />

    </RelativeLayout>


    <!--中-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_it2_bottom2_imghight"
        android:orientation="horizontal">

        <ImageView
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:id="@+id/it2_home_img2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_nav_search" />

        <ImageView
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:id="@+id/it2_home_img3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_nav_search" />

        <ImageView
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:id="@+id/it2_home_img4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_nav_search" />

    </LinearLayout>

    <!--下-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/new_search_comment"
            android:layout_toLeftOf="@+id/it2_home_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingLeft="@dimen/home_it2_home_text4_padingleft"
            android:paddingRight="@dimen/home_it2_home_text4_padingRight"
            android:layout_centerVertical="true"
            android:textSize="@dimen/home_it1_head2"
            android:layout_toLeftOf="@+id/it2_home_img6"
            android:id="@+id/it2_home_text3"
            android:layout_margin="5dp"
            android:text="@string/item2_home_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/it2_home_img6"
            android:src="@drawable/icon_praise_g_v2"
            android:layout_toLeftOf="@+id/it2_home_text4"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <TextView
            android:layout_centerVertical="true"
            android:textSize="@dimen/home_it1_head2"
            android:id="@+id/it2_home_text4"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:text="175"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>